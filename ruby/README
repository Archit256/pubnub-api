Website: www.pubnub.com

===============================================================================
INTRO
===============================================================================
www.pubnub.com

PubNub + JavaScript + Browser:

===============================================================================
SETUP
===============================================================================
<html>
    <body>
        ...

        <!-- Place PubNub Script Low on the Page -->
        <script src="http://www.pubnub.com/js/pubnub.js"></script>
        <script>
            // PubNub Init
            PUBNUB.init({
                // Subscribe key is (REQUIRED)
                subscribe_key : 'a7b328f29de283', // http://pubnub.com/signup

                // Publish key is (OPTIONAL) for security, use behind a server.
                // You can not send a publish message if this key is not set.
                publish_key   : 'a7b328f29de283'  // http://pubnub.com/signup
            });
        </script>
    </body>
</html>

===============================================================================
EXAMPLE
===============================================================================
<script src="http://www.pubnub.com/js/pubnub.js"></script>
<script>

    // PubNub Init
    PUBNUB.init({
        // Subscribe key is (REQUIRED)
        subscribe_key : 'a7b328f29de283', // -> http://www.pubnub.com/signup
        // Publish key is (OPTIONAL) for security, use behind a server.
        // You can not send a publish message if this key is not set.
        publish_key   : 'a7b328f29de283'  // -> http://www.pubnub.com/signup
    });

    // Subscribe to a Channel
    PUBNUB.subscribe({ channel : 'my_chat' }, function(message) {
        // On Publish, Send Alert Message To Every User
        alert(message);

        // Unsubscribe After First Message
        // You would not normally place this here.
        PUBNUB.unsubscribe({ channel : 'my_chat' });
    } );

</script>


